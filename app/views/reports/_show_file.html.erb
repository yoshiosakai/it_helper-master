
<% if @report.file1.present? %>
  <p>添付ファイルがあります：<%= @report.file1 %><p>
  <% if ['.jpg','.jpeg','.gif','.png'].include?(File.extname(@report.file1)) %>
    <%= image_tag "/image/#{@report.file1}", class: "show_image" %>
  <% end %>
    <%= link_to "添付ファイルをダウンロード", reports_download_download_path(@report, file: "file1"), :class => "btn btn-info" %>
<% end %>

