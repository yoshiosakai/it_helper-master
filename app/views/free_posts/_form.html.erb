<%= form_for(@free_posts) do |f| %>
  <div class="form-group">
    <label for="inputName" class="col-lg-2 control-label">名前</label>
    <div class="col-lg-10">
      <%= f.text_field :name,　class: "form-control", placeholder: "フルネーム" %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputTitle" class="col-lg-2 control-label">タイトル</label>
    <div class="col-lg-10">
      <%= f.text_field :title,　class: "form-control", placeholder: "" %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputDetail" class="col-lg-2 control-label">詳細</label>
    <div class="col-lg-10">
      <%= f.text_field :detail, class: "form-control", placeholder: ""%>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "投稿",:class => "btn btn-info" %>
  </div>
<% end %>
